<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Aboutme_Activity">
    <RelativeLayout android:layout_width="0dp" android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="15dp"
                    app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
        >
            <TextView
                    android:text="MyProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/habout"
                    android:layout_weight="0"
                    android:textAppearance="@style/TextAppearance.AppCompat" android:textStyle="bold"
                    android:textSize="24sp" android:textAlignment="center" android:textAllCaps="true"
                    android:gravity="center" android:fontFamily="sans-serif-medium" android:lineSpacingExtra="30sp"/>
            <TextView
                    android:layout_width="134dp"
                    android:layout_height="wrap_content" android:id="@+id/firstname" android:text="Thatphon"/>
            <TextView
                    android:layout_width="162dp"
                    android:layout_height="wrap_content" android:id="@+id/lastname" android:text="Chitinan"/>
            <TextView
                    android:text="59160182"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/id"/>
            <TextView
                    android:text="36/1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/address"/>
            <TextView
                    android:text="Student"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/job"/>
            <Button
                    android:text="Edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/Edit" android:layout_weight="0"
                    android:onClick="gotoedit"/>
            <Button
                    android:text="Back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/backhome" android:onClick="goback"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>