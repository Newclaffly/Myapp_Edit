<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Edit_Activity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="587dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">
        <TextView
                android:text="Edit Profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/HeaderEdit" android:textAlignment="center"/>
        <TextView
                android:text="Firstname:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/hfirstname"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/firstname"/>
        <TextView
                android:text="Lastname:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/hlastname"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/lastname"/>
        <TextView
                android:text="ID:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/hid"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/id"/>
        <TextView
                android:text="Adress:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/hadress"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/address"/>
        <TextView
                android:text="Job:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/hjob"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/job"/>
        <Button
                android:text="Submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/submit" android:onClick="gotoabout"/>
        <Button
                android:text="Back About"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/backab" android:onClick="backtoabout"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>