<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="587dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText"/>
        <Button
                android:text="@android:string/ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/ok" android:onClick="clickOK"/>
        <Button
                android:text="About"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/gotoabout" android:onClick="gotoaboutme"/>
        <Button
                android:text="Edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/edit" android:onClick="gotoedit"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>